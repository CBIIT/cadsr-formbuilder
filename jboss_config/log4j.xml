<!-- ============================ -->
<!-- Setup the freestyle Appender -->
<!-- ============================ -->
<appender name="FREESTYLESEARCH_FILE" class="org.jboss.logging.appender.RollingFileAppender">
  <errorHandler class="org.jboss.logging.util.OnlyOnceErrorHandler"/>
  <param name="File" value="/usr/local/jboss404/server/ncicb-core/log/freestylesearch_log.txt"/>
  <param name="Append" value="true"/>
  <param name="MaxFileSize" value="200KB"/>
  <param name="MaxBackupIndex" value="3"/>
  <layout class="org.apache.log4j.PatternLayout">
    <param name="ConversionPattern" value="%d %-5p [%c : %L] %m%n"/>
  </layout>
</appender>

    <!-- ============================== -->
    <!-- Setup the caCORE Categories -->
    <!-- ============================== -->

    <category name="gov.nih.nci" additivity="false">
        <priority value="DEBUG" />
        <appender-ref ref="CACORE" />
    </category>

    <!-- ============================ -->
    <!-- Setup the sentinel category debug-->
    <!-- ============================ -->

    <category name="gov.nih.nci.cadsr.sentinel" additivity="false">
        <priority value="DEBUG" />
        <appender-ref ref="CADSRSENTINEL_FILE" />
    </category>

    <!-- ======================= -->
    <!-- Setup the cdebrowser category -->
    <!-- ======================= -->
    
    <category name="gov.nih.nci.ncicb.cadsr" additivity="false">
        <priority value="DEBUG" />
        <appender-ref ref="CDEBROWSER_FILE" />
    </category>
    <!-- ============================ -->
    <!-- Setup the cdecurate category debug-->
    <!-- ============================ -->

    <category name="gov.nih.nci.cadsr.cdecurate" additivity="false">
        <priority value="DEBUG" />
        <appender-ref ref="CDECURATE_FILE" />
    </category>

    <!-- ============================== -->
    <!-- Setup the CSM's CLM Categories -->
    <!-- ============================== -->

    <category name="CSM.Audit.Logging.Event.Authentication">
        <level value="info" />
        <appender-ref ref="CLM_MYSQL_APPENDER" />
    </category>
    <category name="CSM.Audit.Logging.Event.Authorization">
        <level value="info" />
        <appender-ref ref="CLM_MYSQL_APPENDER" />
    </category>
    <category name="CSM.Audit.Logging.ObjectState.Authorization">
        <level value="info" />
        <appender-ref ref="CLM_MYSQL_APPENDER" />
    </category>
    <category name="CSM.Audit.Logging.Authorization">
        <level value="info" />
        <appender-ref ref="CLM_MYSQL_APPENDER" />
    </category>

    <!-- ======================= -->
    <!-- Setup the CTOMWS category -->
    <!-- ======================= -->
    
    <category name="gov.nih.nci.ctom" additivity="false">
        <priority value="DEBUG" />
        <appender-ref ref="CTOMWS_FILE" />
    </category>
