<?xml version = '1.0' encoding = 'windows-1252'?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">
<struts-config>
  <form-beans>
    <form-bean name="createModuleForm"
      type="gov.nih.nci.ncicb.cadsr.common.struts.formbeans.GenericDynaFormBean"
      dynamic="true">
      <form-property name="moduleLongName" type="java.lang.String"/>
      <form-property name="moduleInstruction" type="java.lang.String"/>
      <form-property name="formIdSeq" type="java.lang.String"/>
      <form-property name="comments" type="java.lang.String"/>
      <form-property name="displayOrder" type="java.lang.Integer"/>
    </form-bean>
    
    <form-bean name="copyModuleForm"
      type="gov.nih.nci.ncicb.cadsr.common.struts.formbeans.GenericDynaFormBean"
      dynamic="true">
      <form-property name="displayOrder" type="java.lang.Integer"/>
      <form-property name="formIdSeq" type="java.lang.String"/>
      <form-property name="moduleIndex" type="java.lang.Integer"/>
    </form-bean>    
  </form-beans>

  <action-mappings>
    <action name="createModuleForm" path="/gotoCreateModule" parameter="method"
      scope="request"
      type="gov.nih.nci.ncicb.cadsr.formbuilder.struts.actions.ModuleCreateAction"
      validate="false">
      <forward name="toFormEdit" path="/formbuilder/formEdit.jsp"/>
      <forward name="toCreateModule" path="/formbuilder/moduleCreate.jsp"/>
    </action>    

    <action name="createModuleForm" path="/createModule" parameter="method"
      scope="request"
      type="gov.nih.nci.ncicb.cadsr.formbuilder.struts.actions.ModuleCreateAction"
      validate="true"
      input="/formbuilder/moduleCreate.jsp"
      >
      <forward name="toFormEdit" path="/formbuilder/formEdit.jsp"/>
    </action>    
    
    <action name="copyModuleForm" path="/formbuilder/moduleSearch" parameter="method"
      scope="request"
      type="gov.nih.nci.ncicb.cadsr.formbuilder.struts.actions.CopyModuleAction"
      validate="true">
        <forward name="toFormEdit" path="/formbuilder/formEdit.jsp"/>
        <forward name="gotoSelectModule" path="/formbuilder/moduleCopyFormDetails.jsp"/>
        <forward name="doneCopyToList" path="/formbuilder/moduleCopyFormDetails.jsp"/>
        <forward name="cancelModuleSearch" path="/formbuilder/moduleCreate.jsp"/>
    </action>    
    
    <action name="copyModuleForm" path="/formbuilder/copyFromModuleList" parameter="method"
      scope="request"
      type="gov.nih.nci.ncicb.cadsr.formbuilder.struts.actions.CopyModuleAction"
      validate="true"
      >

      <forward name="viewModuleList" path="/formbuilder/copyFromModuleList.jsp"/>
      <forward name="doneDelete" path="/formbuilder/copyFromModuleList.jsp"/>
      <forward name="done" path="/formbuilder/formEdit.jsp"/>  
      <forward name="copyDone" path="/formbuilder/formEdit.jsp"/>  
    </action>  
    
     <action name="copyModuleForm" path="/formViewAddToList" parameter="method"
      scope="request"
      type="gov.nih.nci.ncicb.cadsr.formbuilder.struts.actions.CopyModuleAction"
      validate="true"
      >
      <forward name="doneCopyToList" path="/formbuilder/formDetails.jsp"/>
    </action>    
    
    <action name="copyModuleForm" path="/formbuilder/viewModuleList" parameter="method"
      scope="request"
      type="gov.nih.nci.ncicb.cadsr.formbuilder.struts.actions.CopyModuleAction"
      validate="true"
      >
      <forward name="viewModuleList" path="/formbuilder/moduleList.jsp"/>
      <forward name="doneCopyToList" path="/formbuilder/formbuilder.jsp"/>
      <forward name="doneDelete" path="/formbuilder/moduleList.jsp"/>
      <forward name="done" path="/formbuilder/formbuilder.jsp"/>
    </action>     
    
  </action-mappings>

</struts-config>
